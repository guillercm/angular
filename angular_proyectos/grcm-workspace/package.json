{
  "name": "grcm-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "build:grcm-testbed-app": "ng build grcm-testbed-app",
    "start:grcm-testbed-app": "ng serve grcm-testbed-app",
    "serve:ssr:grcm-testbed-app": "node dist/grcm-testbed-app/server/server.mjs",
    "build:grcm-components": "ng build grcm-components",
    "lint:grcm-components": "ng lint grcm-components",
    "test:grcm-components": "ng test grcm-components --no-watch --no-progress --browsers=ChromeHeadless",
    "pack:grcm-components": "cd ./dist/grcm-components && npm pack",
    "release-major:grcm-components": "cd projects/grcm-components && npm run release -- --release-as major",
    "release-minor:grcm-components": "cd projects/grcm-components && npm run release -- --release-as minor",
    "release-patch:grcm-components": "cd projects/grcm-components && npm run release -- --release-as patch",
    "publish:grcm-components": "cd dist/grcm-components && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/platform-server": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@angular/ssr": "^19.2.6",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.11.3",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.1.3",
    "@angular/compiler-cli": "^19.1.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "angular-eslint": "19.3.0",
    "eslint": "^9.23.0",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.2.0",
    "release": "^6.3.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.27.0"
  }
}
