{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "grcm-components": {
      "projectType": "library",
      "root": "projects/grcm-components",
      "sourceRoot": "projects/grcm-components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/grcm-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/grcm-components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/grcm-components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/grcm-components/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/grcm-components/**/*.ts",
              "projects/grcm-components/**/*.html"
            ],
            "eslintConfig": "projects/grcm-components/eslint.config.js"
          }
        }
      }
    },
    "grcm-testbed-app": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/grcm-testbed-app",
      "sourceRoot": "projects/grcm-testbed-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/grcm-testbed-app",
            "index": "projects/grcm-testbed-app/src/index.html",
            "browser": "projects/grcm-testbed-app/src/main.ts",
            "polyfills": [],
            "tsConfig": "projects/grcm-testbed-app/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/grcm-testbed-app/public"
              }
            ],
            "styles": [
              "projects/grcm-testbed-app/src/styles/scss/main.scss"
            ],
            "scripts": [],
            "server": "projects/grcm-testbed-app/src/main.server.ts",
            "outputMode": "server",
            "ssr": {
              "entry": "projects/grcm-testbed-app/src/server.ts"
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "grcm-testbed-app:build:production"
            },
            "development": {
              "buildTarget": "grcm-testbed-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [],
            "tsConfig": "projects/grcm-testbed-app/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/grcm-testbed-app/public"
              }
            ],
            "styles": [
              "projects/grcm-testbed-app/src/styles/scss/main.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/grcm-testbed-app/**/*.ts",
              "projects/grcm-testbed-app/**/*.html"
            ],
            "eslintConfig": "projects/grcm-testbed-app/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": [
      "angular-eslint"
    ]
  }
}
